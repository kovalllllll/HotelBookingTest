@page
@model HotelBooking.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="max-w-md mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">👤 Вхід в систему</h1>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4 rounded">
                <p class="text-red-700">@Model.ErrorMessage</p>
            </div>
        }

        <form method="post" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email" asp-for="Input.Email" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="your@email.com">
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Пароль</label>
                <input type="password" asp-for="Input.Password" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="••••••••">
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
            </div>
            <div class="flex items-center">
                <input type="checkbox" asp-for="Input.RememberMe" class="h-4 w-4 text-blue-600 rounded border-gray-300">
                <label asp-for="Input.RememberMe" class="ml-2 text-sm text-gray-600">Запам'ятати мене</label>
            </div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200">
                Увійти
            </button>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">Немає акаунту? <a href="/Register" class="text-blue-600 hover:underline font-medium">Зареєструватися</a></p>
        </div>

        <div class="mt-4 p-4 bg-gray-50 rounded-lg">
            <p class="text-sm text-gray-500 text-center">Тестовий акаунт адміністратора:</p>
            <p class="text-sm text-gray-600 text-center font-mono">admin@hotel.com / Admin123!</p>
        </div>
    </div>
</div>
