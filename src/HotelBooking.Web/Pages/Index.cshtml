@page
@model HotelBooking.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Готелі";
}

<div class="max-w-7xl mx-auto">
    <!-- Search Section -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">🔍 Пошук номерів</h2>
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Місто</label>
                <input type="text" name="city" value="@Model.City" placeholder="Введіть місто..."
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Дата заїзду</label>
                <input type="date" name="checkIn" value="@Model.CheckIn?.ToString("yyyy-MM-dd")"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Дата виїзду</label>
                <input type="date" name="checkOut" value="@Model.CheckOut?.ToString("yyyy-MM-dd")"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
                    Знайти
                </button>
            </div>
        </form>
    </div>

    <!-- Hotels List -->
    <h2 class="text-3xl font-bold text-gray-800 mb-6">🏨 Наші готелі</h2>
    
    @if (!Model.Hotels.Any())
    {
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
            <p class="text-yellow-700">Готелі не знайдено. Спробуйте змінити параметри пошуку.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var hotel in Model.Hotels)
            {
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
                    <img src="@(hotel.ImageUrl ?? "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800")" 
                         alt="@hotel.Name" class="w-full h-48 object-cover">
                    <div class="p-5">
                        <div class="flex items-center justify-between mb-2">
                            <h3 class="text-xl font-bold text-gray-800">@hotel.Name</h3>
                            <div class="flex text-yellow-400">
                                @for (int i = 0; i < hotel.StarRating; i++)
                                {
                                    <span>⭐</span>
                                }
                            </div>
                        </div>
                        <p class="text-gray-600 text-sm mb-2">📍 @hotel.City, @hotel.Address</p>
                        <p class="text-gray-500 text-sm mb-4 line-clamp-2">@hotel.Description</p>
                        <div class="flex items-center justify-between">
                            <div>
                                <span class="text-sm text-gray-500">від</span>
                                <span class="text-xl font-bold text-green-600">@(hotel.MinPrice?.ToString("N0") ?? "—") ₴</span>
                                <span class="text-sm text-gray-500">/ніч</span>
                            </div>
                            <a href="/Hotels/@hotel.Id" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition duration-200">
                                Переглянути
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
